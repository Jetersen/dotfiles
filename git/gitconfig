[alias]
	cp = cherry-pick
	p = push
	prb = pull --rebase
	pushf = push --force-with-lease
	s = status
	rb = rebase
	rbc = rebase --continue
	rbs = rebase --skip
	rba = rebase --abort
	oops = commit --amend --no-edit
	normalize = add --renormalize
	fix-working-tree = !git rm --cached -r . && git reset --hard
	fixauthor = commit --amend --reset-author --no-edit
	rerun-ci = !git commit -m \"Rerun CI\" --allow-empty && git push
	work = config user.email \"joseph.petersen@devoteam.com\"
	home = config user.email \"me@jetersen.dev\"
[help]
	autocorrect = 1
[core]
	autocrlf = input
	excludesfile = ~/.gitignore.global
	editor = code --wait
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[gpg]
	program = gpg
[tag]
  gpgsign = true
	forceSignAnnotated = true
[pull]
	rebase = true
[push]
	default = current
	followTags = true
[fetch]
	prune = true
[branch]
	autosetupmerge = always
	autosetuprebase = always
[remote "origin"]
	fetch = +refs/pr/*/head:refs/remotes/origin/pr/*
[include]
	path = .gitconfig.local
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[user]
	name = Joseph Petersen
	signingKey = 368806594A969FBF577217D905756914983DA9E9
	email = me@jetersen.dev
[includeIf "gitdir:~/git/work/"]
	path = .gitconfig.work
[includeIf "gitdir:~/git/code/"]
	path = .gitconfig.home
[includeIf "gitdir/i:C:/git/work/"]
	path = .gitconfig.work
[includeIf "gitdir/i:C:/git/code/"]
	path = .gitconfig.home
[diff "sopsdiffer"]
	textconv = sops -d
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
	insteadOf = https://bitbucket.org/
[url "ssh://git@heroku.com/"]
	insteadOf = https://git.heroku.com/
